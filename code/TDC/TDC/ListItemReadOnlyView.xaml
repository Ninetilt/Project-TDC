<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDC.ListItemReadOnlyView">
    <VerticalStackLayout Padding="5" Spacing="5" HorizontalOptions="FillAndExpand">

        <!-- To-Do Item -->
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="Center" ColumnDefinitions="Auto,*">
            <!-- Checkbox -->
            <CheckBox x:Name="TaskCheckBox" VerticalOptions="Center" Grid.Column="0" IsEnabled="False"/>

            <!-- description text field -->
            <Entry x:Name="TaskEntry"
                   Placeholder="Enter task here..."
                   VerticalOptions="Center" 
                   IsReadOnly="True" 
                   Grid.Column="1"
            />

            <!--effort points-->
            
        </Grid>
    </VerticalStackLayout>
</ContentView>
