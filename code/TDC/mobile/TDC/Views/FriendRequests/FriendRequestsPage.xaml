<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDC.Views.FriendRequests.FriendRequestsPage"
             Title="Friend Requests">

    <VerticalStackLayout Padding="10">
        <Label Text="Incoming Friend Requests" FontSize="Large" />

        <CollectionView x:Name="IncomingRequestsView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="{Binding}" VerticalOptions="Center"/>
                        <Button Text="Accept" Clicked="Accept_Clicked"/>
                        <Button Text="Decline" Clicked="Decline_Clicked"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="Send Friend Request" FontSize="Medium" Margin="0,20,0,0"/>
        <Entry x:Name="UsernameEntry" Placeholder="Enter username..." />
        <Button Text="Send Request" Clicked="SendRequest_Clicked"/>
    </VerticalStackLayout>
</ContentPage>