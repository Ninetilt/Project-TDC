<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDC.MainPage"
             Title="TDC"
>

    <ScrollView>
        <Grid>
            <VerticalStackLayout Padding="30,0" Spacing="25">
                <Label
                Text="TDC"
                FontSize="100"
                Style="{StaticResource SubHeadline}"
                FontFamily="Title"
                Margin="0,0,0,-40"/>

                <Label
                Text="TO-DO-Competition"
                Style="{StaticResource SubHeadline}"
                FontFamily="Text" />

                <!-- show available lists -->
                <Frame x:Name="ListPreviewFrame"
                   HorizontalOptions="Fill"
                   VerticalOptions="Center"
                   CornerRadius="20"                  
                   HasShadow="True"
                   Padding="10"
                   BackgroundColor="#00ADB5"
                   BorderColor="Transparent"    
                   HeightRequest="400">
                    <Grid RowDefinitions="*,Auto">                        
                        <ScrollView Grid.Row="0">
                            <StackLayout x:Name="ListPreview"
                                HorizontalOptions="FillAndExpand"/>
                        </ScrollView>

                        <Button x:Name="OpenList"
                            Grid.Row="1"
                            BackgroundColor="#068186"
                            CornerRadius="5"
                            Text="Open List"
                            TextColor="#EEEEEE"
                            Clicked="OnListPreviewTapped"                            
                            HorizontalOptions="Center"
                            Margin="0,10,0,0"/>
                    </Grid>
                </Frame>


                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Height="50" ColumnSpacing="20" Margin="20, 10" ColumnDefinitions="Auto,*,Auto">
                    <Button
                        x:Name="PrevBtn"
                        Text="&lt;" 
                        FontSize="Small"
                        FontFamily="Title"
                        Grid.Column="0"
                        SemanticProperties.Hint="previous list"
                        Clicked="OnPrevClicked"
                        BackgroundColor="#EEEEEE"
                        HeightRequest="50"
                        WidthRequest="50"
                        HorizontalOptions="Center"
                        VerticalOptions="Fill"/>
                    <Button
                        x:Name="NewListBtn"
                        Text="+"
                        FontSize="Medium"
                        FontFamily="Title"                        
                        Grid.Column="1"
                        SemanticProperties.Hint="Create a new list"
                        Clicked="OnNewListClicked"
                        WidthRequest="50"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"/>
                    <Button
                        x:Name="NextBtn"
                        Text="&gt;" 
                        FontSize="Small"
                        FontFamily="Title"
                        Grid.Column="2"
                        SemanticProperties.Hint="next list"
                        Clicked="OnNextClicked"
                        BackgroundColor="#EEEEEE"
                        WidthRequest="50"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        VerticalOptions="Fill"/>
                </Grid>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>